<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WheatherInputLabel" parent="@android:style/Widget.TextView">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WheatherTitleLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/label_title</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WheatherTextReadOnly" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

</resources>
